{
  "dependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "dotenv": "^17.2.2",
    "playwright": "^1.55.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/node": "^24.3.1",
    "allure-commandline": "^2.34.1",
    "allure-cucumberjs": "^3.4.1",
    "allure-js-commons": "^3.4.1",
    "allure-playwright": "^3.4.1",
    "cross-env": "^10.1.0",
    "rimraf": "^6.0.1"
  },
  "scripts": {
    "clean:allure": "npx rimraf allure-results allure-report",
    "test:qa:chromium": "cross-env ENV=qa npx playwright test --project=chromium",
    "test:cucumber:qa": "cross-env ENV=qa npx cucumber-js features/HRMDemo_Login.feature features/HRMDemo_Logout.feature --require ./features/**/*.js retry=3 --exit",
    "allure:generate": "npx allure generate allure-results --clean -o allure-report",
    "allure:open": "npx allure open allure-report",
    "test:allure": "npm run clean:allure && npm run test:cucumber:qa && npm run allure:generate && npm run allure:open"
  }
}
